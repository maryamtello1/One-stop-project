{
  "manifest_version": 2,
  "name": "Email Answering Extension",
  "version": "1.0",
  "description": "My extension doesn't do anything yet!",
  "background": {
      "persistent": false,
      "scripts": ["js/background.js"]
  },
  "content_scripts": [{
      "matches": ["<all_urls>"],  
      "js": ["js/content.js"]
  }],
  "browser_action": {
     "default_popup": "html/popup.html", 
     "default_icon":  "assets/bear.png" 
  },
  "permissions": [
      "activeTab"
  ]
}
